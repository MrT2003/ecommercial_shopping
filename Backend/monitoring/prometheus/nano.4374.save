global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  # Tự theo dõi Prometheus
  - job_name: prometheus
    static_configs:
      - targets: ['prometheus:9090']

  # cAdvisor: metric container
  - job_name: cadvisor
    static_configs:
      - targets: ['cadvisor:8080']

  # Node Exporter: metric hệ thống (WSL VM)
  - job_name: node_exporter
    static_configs:
      - targets: ['node-exporter:9100']

  # (Tuỳ chọn) API FastAPI nếu bạn thêm endpoint /metrics
  # - job_name: api
  #   static_configs:
  #     - targets: ['api:8000']

